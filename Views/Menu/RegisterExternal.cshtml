@model RegisterExternalViewModel

<div class="text-center" style="margin-top: 5%">
    <h1 class="display-2">Enter username</h1>
    
    <div class="btn-group-vertical" style="margin-top: 50px">
        <form asp-controller="Menu" asp-action="RegisterExternal" method="post">
            <div>
                <span asp-validation-for="UserName"></span>
                <input class="input-group-text" style="font-size: x-large"
                       asp-for="@Model.UserName"/>
                <button class="btn btn-lg btn-primary" type="submit"
                        style="margin-top: 20px; height: 80%">Save</button>
            </div>
        </form>
    </div>
</div>