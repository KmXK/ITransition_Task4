@model MenuViewModel
<div class="text-center" style="margin-top: 5%">
    <h1 class="display-2">Login Page</h1>

    <div class="btn-group-vertical" style="margin-top: 50px">
        <form asp-controller="Menu" asp-action="Login" method="post">
            <input hidden name="returnUrl" value=@Model.ReturnUrl />
            <button class="btn btn-block btn-lg btn-social btn-facebook" type="submit"
                    name="provider" value="Facebook">
                <span class="fa fa-facebook" style="color: white"></span> Sign in with Facebook
            </button>
            <button class="btn btn-block btn-lg btn-social btn-vk align-content-center" style="margin-top: 20px"
                    name="provider" value="VK">
                <span class="fa fa-vk" style="color: white"></span> Sign in with VK
            </button>
            <button class="btn btn-block btn-lg btn-social btn-google" style="margin-top: 20px"
                    name="provider" value="Google">
                <span class="fa fa-google" style="color: white"></span> Sign in with Google
            </button>
        </form>
</div>
</div>

<footer style="position: absolute; bottom: 10px; left: 0; right: 0">
    <div>
        <p class="h4 text-center">Statistic</p>
        <p class="h4 text-center">Bro:<span id="broCount">@Model.BroCount</span>  Sis:<span id="sisCount">@Model.SisCount</span></p>
    </div>
</footer>
